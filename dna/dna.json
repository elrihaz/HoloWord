{
    // proprietes generales de l'app
    "Version": 1,
    "UUID": "9097a969-55cb-11e8-afc5-10c37b6de7d9",
    "Name": "HoloWorld",
    "Properties": {
        "description": "the hello world app for Holochain",
        "language": "en"
    },
    "PropertiesSchemaFile": "properties_schema.json",
    "RequiresVersion": 24,
    "DHTConfig": {
        "HashType": "sha2-256",
        "NeighborhoodSize": 0
    },

    // les zomes: fonctionnalites de l'app
    "Zomes": [
        // zome ***readerWriter***
        {
            // proprietes generales du zome
            "Name": "readerWriter",
            "Description": "read and write data",
            "CodeFile": "readerWriter.js", // fichier de code
            "RibosomeType": "js",
            "BridgeFuncs": null,
            "Config": null,

            // format des donnes
            "Entries": [

                // cha√Æne de texte
                {
                    "Name": "holoText",
                    "DataFormat": "string",
                    "Sharing": "private"
                }
            ],

            // les fonctions
            "Functions": [

                // Ecriture
                {
                    "Name": "holoTextWrite",
                    "CallingType": "string"
                },

                // Lecture
                {
                    "Name": "holoTextRead",
                    "CallingType": "string"
                }
            ]
        } // fin zome ***readerWriter***

    ] // fin des zomes
}
